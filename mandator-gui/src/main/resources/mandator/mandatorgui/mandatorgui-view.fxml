<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="285.0" maxWidth="325.0" minHeight="285.0" minWidth="325.0" prefHeight="285.0" prefWidth="325.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mandator.mandatorgui.MandatorGuiController">

  <HBox spacing="10">
    <Label text="Community Pool:" />
    <Label fx:id="communityPoolLabel" text="..." />
  </HBox>

  <HBox spacing="10">
    <Label text="Grid Portion:" />
    <Label fx:id="gridPortionLabel" text="..." />
  </HBox>

  <Button onAction="#handleRefresh" text="refresh" />

  <HBox spacing="10">
    <Label text="Start:">
         <padding>
            <Insets right="5.0" />
         </padding></Label>
    <DatePicker fx:id="startDate" />
    <ComboBox fx:id="startTimeBox" />
  </HBox>

  <HBox spacing="10">
    <Label text="End:">
         <padding>
            <Insets right="10.0" />
         </padding></Label>
    <DatePicker fx:id="endDate" />
    <ComboBox fx:id="endTimeBox" />
  </HBox>

  <Button onAction="#handleShowData" text="show data" />

  <HBox spacing="10">
    <Label text="Community produced:" />
    <Label fx:id="producedLabel" text="..." />
  </HBox>

  <HBox spacing="10">
    <Label text="Community used:" />
    <Label fx:id="usedLabel" text="..." />
  </HBox>

  <HBox spacing="10">
    <Label text="Grid used:" />
    <Label fx:id="gridUsedLabel" text="..." />
  </HBox>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
